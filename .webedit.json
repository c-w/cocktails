{
  "recipes.json": {
    "schema": {
      "properties": {
        "Rating": {
          "type": "number",
          "enum": [
            1,
            2,
            3,
            4,
            5
          ]
        },
        "Name": {
          "type": "string"
        },
        "Ingredients": {
          "type": "string"
        }
      },
      "required": [
        "Rating",
        "Name",
        "Ingredients"
      ]
    },
    "ui": {
      "Rating": {
        "ui:widget": "radio",
        "ui:options": {
          "inline": true
        }
      },
      "Ingredients": {
        "ui:widget": "textarea"
      }
    }
  }
}
